/* 	prefix_type	= custom */
/* 	low_threshold = 20 */
/* 	threshold_type = percentage_avail */
/* } */

disk "/" {
	format = "M2: %avail"
	prefix_type	= custom
	low_threshold = 20
	threshold_type = percentage_avail
}

volume master {
    format = "%volume "
    format_muted = "婢"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
